# Copie este arquivo para terraform.tfvars e ajuste os valores

# =============================================================================
# CONFIGURAÃ‡Ã•ES PRINCIPAIS
# =============================================================================

# Nome do Resource Group
resource_group_name = "rg-agent-ai"

# LocalizaÃ§Ã£o dos recursos (regiÃ£o do Azure)
location = "Brazil South"

# Ambiente (dev, staging, prod)
environment = "dev"

# =============================================================================
# CONFIGURAÃ‡Ã•ES DE REDE
# =============================================================================

# Address space da Virtual Network
vnet_address_space = "10.0.0.0/16"

# NÃºmero de nÃ³s do AKS
aks_node_count = 3

# Tamanho da VM dos nÃ³s do AKS
aks_vm_size = "Standard_D2s_v3"

# =============================================================================
# CONFIGURAÃ‡Ã•ES DE APLICAÃ‡ÃƒO
# =============================================================================

# NÃºmero de rÃ©plicas dos deployments
app_replicas = {
  process_app = 2
  chat_api    = 3
  agent_chat  = 2
  tools       = 1
}

# Registry dos containers (substitua pelo seu)
container_registry = "your-registry.azurecr.io"

# Tags dos containers
container_tags = {
  process_app = "latest"
  chat_api    = "latest"
  agent_chat  = "latest"
  tools       = "latest"
}

# =============================================================================
# CONFIGURAÃ‡Ã•ES DE MONITORAMENTO
# =============================================================================

# Habilitar monitoramento
enable_monitoring = true

# Dias de retenÃ§Ã£o dos logs
log_retention_days = 30

# =============================================================================
# CONFIGURAÃ‡Ã•ES DE ESCALABILIDADE
# =============================================================================

# Habilitar KEDA
keda_enabled = true

# ConfiguraÃ§Ã£o de escalabilidade
scaling_config = {
  min_replicas = 1
  max_replicas = 10
  cpu_threshold = 70
  memory_threshold = 80
}

# =============================================================================
# CONFIGURAÃ‡Ã•ES DE SEGURANÃ‡A
# =============================================================================

# Habilitar Private Endpoints
enable_private_endpoints = false

# Habilitar Network Policies
enable_network_policies = true

# =============================================================================
# CONFIGURAÃ‡Ã•ES DE BACKUP
# =============================================================================

# Habilitar backup
enable_backup = true

# Dias de retenÃ§Ã£o do backup
backup_retention_days = 7

# =============================================================================
# CONFIGURAÃ‡Ã•ES DE CUSTO
# =============================================================================

# Centro de custo
cost_center = "AI-Agent"

# Nome do projeto
project_name = "AI-Agent-System"

